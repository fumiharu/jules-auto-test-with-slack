# Slack Configuration
# Get these from https://api.slack.com/apps
# Bot User OAuth Token (starts with xoxb-)
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
# App-Level Token (starts with xapp-, enable Socket Mode to get this)
SLACK_APP_TOKEN=xapp-your-app-token-here

# OpenAI Configuration
# Get this from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-key-here

# GitHub Configuration
# Personal Access Token with repo scope
GITHUB_TOKEN=ghp-your-github-token-here
# The owner (user or organization) of the repository
GITHUB_OWNER=fumiharu
# The repository name
GITHUB_REPO=ui-automation-test-sample
# The workflow filename to trigger
GITHUB_WORKFLOW_ID=ui-test.yml

# Google Sheets Configuration (Optional)
# Path to service_account.json OR the content of the JSON itself
GOOGLE_CREDENTIALS_JSON=credentials.json
# The ID of the spreadsheet (found in the URL)
GOOGLE_SHEET_KEY=your-spreadsheet-id-here

# Application Mode Settings
# Set to True for testing without real API calls
# Set to False for production
TEST_MODE=False
MOCK_GITHUB_MODE=False
MOCK_MODE=False
